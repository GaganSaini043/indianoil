<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/orange"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:background="@color/blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/img_back"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/backicon"
            android:backgroundTint="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rel_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_below="@+id/rel_top"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/txt"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp" />

            <TextView
                android:id="@+id/txtperiodA"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="PERIOD A"
                android:layout_toRightOf="@+id/txt"
                android:textStyle="bold"
                android:gravity="center_horizontal|center_vertical"
                android:layout_marginRight="10dp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/txtperiodB"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="PERIOD B"
                android:gravity="center_horizontal|center_vertical"
                android:layout_toRightOf="@+id/txtperiodA"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:textSize="18sp"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relfromA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/rel_period"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/txtfromA"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="From :"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/edt_from_dateA"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtfromA"
                    android:textColor="#FFFFFF"
                    android:hint="dd/mm/yyyy"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_corner_back_edittext" />

                <EditText
                    android:id="@+id/edt_from_dateB"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/edt_from_dateA"
                    android:textColor="#FFFFFF"
                    android:hint="dd/mm/yyyy"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_corner_back_edittext" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relToA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/relfromA"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/txtToA"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="To :"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    />

                <EditText
                    android:id="@+id/edt_to_dateA"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtToA"
                    android:textColor="#FFFFFF"
                    android:hint="dd/mm/yyyy"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_corner_back_edittext" />

                <EditText
                    android:id="@+id/edt_to_dateB"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/edt_to_dateA"
                    android:textColor="#FFFFFF"
                    android:hint="dd/mm/yyyy"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_corner_back_edittext" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reltotalA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/relToA"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/txtTotalA"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:text="Total :"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/edt_totalA"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/txtTotalA"
                    android:textColor="#FFFFFF"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_corner_back_edittext" />

                <TextView
                    android:id="@+id/edt_totalB"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/edt_totalA"
                    android:textColor="#FFFFFF"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/round_corner_back_edittext" />

            </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_column"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reltotalA"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/txt_select_column"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Column Name :"/>

        <Spinner
            android:id="@+id/spin_columnname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/txt_select_column"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:dropDownWidth="230dp"
            android:overlapAnchor="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:popupTheme="@style/AppTheme.Popup"
            android:background="@drawable/spinner_bg"
            android:popupBackground="@drawable/spinner_background_settings"
            android:spinnerMode="dropdown"
            android:dropDownVerticalOffset="50dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rel_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/rel_column"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btn_showdata"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/back__button_drawable"
            android:text="Show Result"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/edt_result"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/btn_showdata"
            android:textColor="#FFFFFF"
            android:editable="false"
            android:focusable="false"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/round_corner_back_edittext" />

    </RelativeLayout>



</RelativeLayout>