<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/orange"
    android:orientation="vertical">

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@color/purpledark"-->
        <!--android:layout_margin="5dp">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/back_cardview"
            android:padding="10dp">

        <RelativeLayout
            android:id="@+id/rel_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_date_txt"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Date"
                android:gravity="center_vertical"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/text_date_txt"
                android:text=":  05/11/2019"
                android:textColor="#FFFFFF"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rel_time"
            android:layout_below="@+id/rel_date"
            android:layout_width="match_parent"
            android:layout_height="40dp">

                <TextView
                    android:id="@+id/text_time_txt"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Time"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="16dp"
                    android:layout_toLeftOf="@+id/img_click"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@id/text_time_txt"
                    android:text=":  345"
                    android:textColor="#FFFFFF"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <ImageView
                android:id="@+id/img_click"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/rightarrow"
                android:backgroundTint="@color/white"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rel_ro_code"
                android:layout_width="match_parent"
                android:layout_below="@+id/rel_time"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/text_ro_code_txt"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:text="RO Code"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/txt_rocode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@id/text_ro_code_txt"
                    android:text=":  111111"
                    android:textColor="#FFFFFF"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />



            </RelativeLayout>

        </RelativeLayout>

    <!--</android.support.v7.widget.CardView>-->

</LinearLayout>