<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/topbox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/twenty_sp"
    android:layout_marginRight="@dimen/twenty_sp"
    android:background="@drawable/white_background_dialog"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="@dimen/five_dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/one_dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/five_dp"
                android:gravity="center"
                android:textSize="@dimen/eighteen_sp"
                android:textColor="@color/orangedark"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:padding="@dimen/five_dp"
            android:visibility="visible">


            <TextView
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/five_dp"
                android:gravity="center"
                android:text="Recent Dates Available are :"
                android:textSize="@dimen/eighteen_sp"
                android:textColor="@color/orangedark"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/eight_dp"
            android:paddingTop="@dimen/twenty_dp"
            android:paddingRight="@dimen/eight_dp"
            android:paddingBottom="@dimen/twenty_dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center"
                android:scaleType="center"
                android:visibility="gone" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/three_dp"
                android:textColor="@color/orangedark"
                android:textSize="@dimen/sixteen_sp" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/one_dp" />

        <LinearLayout
            android:id="@+id/m_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/ten_dp">

            <Button
                android:id="@+id/buttonOk"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/forty_dp"
                android:layout_gravity="center"
                android:background="@drawable/back__button_drawable"
                android:gravity="center"
                android:paddingLeft="@dimen/fifty_dp"
                android:paddingRight="@dimen/fifty_dp"
                android:text="ok"
                android:textColor="@color/white"
                android:textSize="@dimen/sixteen_sp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>